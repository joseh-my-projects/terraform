pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo "Checkout"
            }
        }
        stage('Terraform Init/Fmt/Validate') {
            steps {
                echo "Terraform"
            }
        }
        stage('Terraform Plan') {
            steps {
                echo "Plan"
            }
        }
        stage("Confirm Apply") {
            steps {
                input {
                    message "Continue with Apply?"
                }
            }
        }
        stage('Apply') {
            steps {
                echo "Applied"
            }

        }
    }
}