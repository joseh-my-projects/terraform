pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/joseh-my-projects/terraform.git'
            }
        }
        stage('Terraform Init/Fmt/Validate') {
            steps {
                echo "Terraform"
            }
        }
        stage('Terraform Plan') {
            steps {
                echo "Plan"
            }
        }
        stage("Confirm Apply") {
            steps {
                input {
                    message "Continue with Apply?"
                }
            }
        }
        stage('Apply') {
            steps {
                echo "Applied"
            }

        }
    }
}